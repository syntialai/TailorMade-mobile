<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_64"
    android:elevation="@dimen/dp_16"
    android:orientation="horizontal"
    android:background="@drawable/drawable_bottom_nav_background"
    android:paddingHorizontal="@dimen/dp_16"
    android:weightSum="4">

    <ImageButton
        android:id="@+id/button_chat_tailor"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="?attr/colorSurface"
        android:src="@drawable/ic_chat_outline"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/button_add_to_cart"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="?attr/colorSurface"
        android:src="@drawable/ic_add_to_cart"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/button_order_now"
        style="@style/Theme.TailorMade.Button.Rounded"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_weight="2"
        android:text="@string/order_now_label" />
</LinearLayout>