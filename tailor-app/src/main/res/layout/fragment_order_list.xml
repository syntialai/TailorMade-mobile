<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".feature.order.view.OrderListFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_item_incoming_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/incoming_label" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_item_recent_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recent_label" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_16" />

</LinearLayout>