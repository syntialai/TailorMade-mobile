<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/dp_4"
    app:cardCornerRadius="@dimen/dp_8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_12">

        <TextView
            android:id="@+id/text_view_history_order_id_label"
            style="@style/TextAppearance.TailorMade.Caption.BlackMedium2"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="@string/order_id_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_history_order_id"
            style="@style/TextAppearance.TailorMade.Caption.BlackHigh"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            app:layout_constraintStart_toEndOf="@id/text_view_history_order_id_label"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/order_id_label" />

        <TextView
            android:id="@+id/text_view_history_order_date"
            style="@style/TextAppearance.TailorMade.Caption.BlackHigh"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/order_date_label" />

        <View
            android:id="@+id/view_history_card_separator"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@color/color_black_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_history_order_id_label" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_view_history_design_ordered"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:layout_marginTop="@dimen/dp_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_history_card_separator"
            app:shapeAppearanceOverlay="@style/Theme.TailorMade.CornerRounded_16dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/text_view_history_design_ordered_title"
            style="@style/TextAppearance.TailorMade.Body1.BlackHigh"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_view_history_design_ordered"
            app:layout_constraintTop_toBottomOf="@id/view_history_card_separator"
            tools:text="@string/ordered_title_label" />

        <TextView
            android:id="@+id/text_view_history_design_ordered_color_label"
            style="@style/TextAppearance.TailorMade.Caption.BlackMedium"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_4"
            android:text="@string/ordered_color_label"
            app:layout_constraintStart_toEndOf="@id/image_view_history_design_ordered"
            app:layout_constraintTop_toBottomOf="@id/text_view_history_design_ordered_title" />

        <TextView
            android:id="@+id/text_view_history_design_ordered_color"
            style="@style/TextAppearance.TailorMade.Caption.BlackHigh"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            app:layout_constraintBottom_toBottomOf="@id/text_view_history_design_ordered_color_label"
            app:layout_constraintStart_toEndOf="@id/text_view_history_design_ordered_color_label"
            app:layout_constraintTop_toTopOf="@id/text_view_history_design_ordered_color_label"
            tools:text="@string/ordered_color_value_label" />

        <TextView
            android:id="@+id/text_view_history_design_ordered_size_label"
            style="@style/TextAppearance.TailorMade.Caption.BlackMedium"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_4"
            android:text="@string/ordered_size_label"
            app:layout_constraintStart_toEndOf="@id/text_view_history_design_ordered_color"
            app:layout_constraintTop_toBottomOf="@id/text_view_history_design_ordered_title" />

        <TextView
            android:id="@+id/text_view_history_design_ordered_size"
            style="@style/TextAppearance.TailorMade.Caption.BlackHigh"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            app:layout_constraintBottom_toBottomOf="@id/text_view_history_design_ordered_size_label"
            app:layout_constraintStart_toEndOf="@id/text_view_history_design_ordered_size_label"
            app:layout_constraintTop_toTopOf="@id/text_view_history_design_ordered_size_label"
            tools:text="@string/ordered_size_value_label" />

        <TextView
            android:id="@+id/text_view_history_design_ordered_price"
            style="@style/TextAppearance.TailorMade.Body2.Primary"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_4"
            app:layout_constraintStart_toEndOf="@id/image_view_history_design_ordered"
            app:layout_constraintTop_toBottomOf="@id/text_view_history_design_ordered_color_label"
            tools:text="@string/ordered_price_label" />

        <TextView
            android:id="@+id/text_view_history_design_ordered_price_after_discount"
            style="@style/TextAppearance.TailorMade.Body2.Primary.Bold"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_4"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/image_view_history_design_ordered"
            app:layout_constraintTop_toBottomOf="@id/text_view_history_design_ordered_color_label"
            tools:text="@string/ordered_price_discount_label"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/text_view_history_design_ordered_price_before_discount"
            style="@style/TextAppearance.TailorMade.Body2.BlackMedium2"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/text_view_history_design_ordered_price_after_discount"
            app:layout_constraintStart_toEndOf="@id/text_view_history_design_ordered_price_after_discount"
            app:layout_constraintTop_toTopOf="@id/text_view_history_design_ordered_price_after_discount"
            tools:text="@string/ordered_discount_label"
            tools:visibility="visible" />

        <include
            android:id="@+id/layout_history_ordered_total"
            layout="@layout/layout_ordered_total"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_view_history_design_ordered"
            app:layout_constraintTop_toBottomOf="@id/text_view_history_design_ordered_price" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>