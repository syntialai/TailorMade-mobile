<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/dp_4"
    app:cardCornerRadius="@dimen/dp_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_history_detail_order_id_label"
            style="@style/TextAppearance.TailorMade.Body2.BlackMedium2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/order_id_label" />

        <TextView
            android:id="@+id/text_view_history_detail_order_id"
            style="@style/TextAppearance.TailorMade.Body1.BlackHigh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            tools:text="@string/order_id_label" />

        <TextView
            android:id="@+id/text_view_history_detail_order_by_label"
            style="@style/TextAppearance.TailorMade.Body2.BlackMedium2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/ordered_by_label" />

        <TextView
            android:id="@+id/text_view_history_detail_order_by"
            style="@style/TextAppearance.TailorMade.Body1.BlackHigh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            tools:text="@string/ordered_by_label" />

        <TextView
            android:id="@+id/text_view_history_detail_order_date_label"
            style="@style/TextAppearance.TailorMade.Body2.BlackMedium2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/order_date_label" />

        <TextView
            android:id="@+id/text_view_history_detail_order_date"
            style="@style/TextAppearance.TailorMade.Body1.BlackHigh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            tools:text="@string/order_date_label" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>